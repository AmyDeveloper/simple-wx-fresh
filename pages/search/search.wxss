.large {
    width: 700rpx;
    margin: 0 auto;
}
.search {
    width: 700rpx;
    height: 28px;
    display: flex;
}
.search input {
    flex: 1;
    border: 1px solid #ccc;
    border-radius: 12px;
    line-height: 28px;
    font-size: 14px;
    padding-left: 30px;

}
.search text {
    width: 40px;
    font-size: 14px;
    color: #ff3399;
    margin-left: 13px;
    line-height: 28px;
}
.hot {
    width: 700rpx;
    height: 140px;
    border-bottom: 1px solid #ccc;
    margin-top: 20px;
}
.module-title {
    display: block;
    width: 750rpx;
    height: 30px;
    font-size: 18px;
    font-weight: bold;
}
.hot .module-msg {
    display: block;
    float: left;
    font-size: 14px;
    padding: 5px;
    border: 1px solid #ccc;
    margin-left: 10px;
    margin-top: 10px;
    border-radius: 4px;
    color: #ccc;
}
.fl {
    float: left;
    display: inline-block;

}
.fr {
    display: block;
    float: right;
    font-size: 12px;
    color: #ccc;
    position: absolute;
    top: 2px;
    right: 10px;
}
.re {
    position: relative;
}
.product {
    position: relative;
    width: 100%;
    height: 150px;
    padding-top: 20px;
}
.like {
    padding-top: 20px;
}

.product .product-img {
    width: 150px;
    height: 150px;
    float: left;
}
.product .product-zhe {
    position: absolute;
    width: 40px;
    height: 40px;
    top: 20px;
    left: 0;
}
.product-msg {
    width: 200px;
    float: right;

}
.msg-title {
    font-size: 16px;
}
.msg-intro {
    font-size: 14px;
    color: #ccc;
}
.icon {
    position: absolute;
    width: 50px;
    height: 50px;
    right: 0px;
    bottom: 10px;
}