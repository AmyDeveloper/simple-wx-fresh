::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.header {
    width: 100%;
    background-color: #FFB23C;
    height: 170px;
    padding: 50px 18px 0px 18px;
    box-sizing: border-box;
}
.content {
    height: 120px;
    background: rgba(255,255,255,.5);
    border-top-right-radius: 10px;
    border-top-left-radius: 10px;
    display: flex;
    padding-left: 20px;
    padding-top: 20px;
    box-sizing: border-box;

}
.userimg {
    width: 50px;
    height: 50px;
    margin-right: 15px;
}
.userimg>open-data {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: flex;
    overflow: hidden;
}
.username {
    width: 50px;
    height: 30px;
    line-height: 30px;
    margin-top: 10px;
    margin-right: 6px;
}
.open-vip {
    padding-top: 10px;
}
.open-vip button {
    background-color: #FBB12F;
    color: #fff;
    font-size: 13px;
    width: 72px;
    height: 30px;
    line-height: 30px;
    padding-left: 3px;
    padding-right: 3px;
}
.arrow {
    float: right;
    width: 0;
    height: 0;
    border-top: 45px solid #3D383C;
    border-right: 45px solid #3D383C;
    border-bottom: 45px solid transparent;
    border-left: 45px solid transparent;
    position: relative;
    top: -120px;
    right: 0;
    border-top-right-radius: 10px;
}
.free {
    color: #FBE1A6;
    float: right;
    position: relative;
    top: -110px;
    right: -85px;
    font-size: 13px;
}
.free .free-exp {
    display: block;
    width: 36px;
    height: 36px;
}
.discount {
    display: flex;
    width: 205px;
    height: 30px;
    line-height: 30px;
    position: relative;
    background-color: #fff;
    top: -60px;
    right: -50px;
    font-size: 16px;
    padding: 8px 18px;
    border-radius: 5px;
    box-shadow: 2px 2px 5px #888888
}
.discount text {
    color: #FD478B;
}
.little-tag {
    /* overflow: hidden; */
    width: 100%;
    position: relative;
    top: -30px;
    left: 0;
    right: 0;
}
.icons {
    display: flex;
    width: 100%;
    height: 80px;
    padding: 0px 8px;
    box-sizing: border-box;
}
.item {
    flex: 1;
    text-align: center;
    font-size: 13px;
    color: #999;
}
.item image {
    width: 40px;
    height: 40px;
    display: inline-block;

}
.redbags{
     width:100%;
     /* border:1px solid red; */
     box-sizing: border-box;
     overflow: hidden;
     padding: 10px;
}
.redbags image {
    width: 48%;
    height: 80px;
    float: left;
}
#b001{
   padding-right: 12px;
}
.vip-title {
    font-size: 18px;
    font-weight: 600;
    padding-left: 10px;
    color: #444243;
    padding-bottom: 10px;
}
.up-title {
    padding: 0px 0px 20px 0px;
}
.down-title {

}
.vip-product {
    width: 100%;
}
.products .pro-item{
    display: flex;
    margin: 10px 15px;
    border-bottom: 1px solid #efefef;
}
.products .img-info {
    width: 105px;
    height: 105px;
    margin-right: 20px;
}
.img-info image {
    width: 100%;
    height: 100%;
    display: block;
}
.pro-info {
    font-size: 16px;
    flex: 1;
}
.item-subtxt {
    font-size: 14px;
    color: #999;
    margin-bottom: 25px;
}
.item-info {
    position: relative;
    overflow: hidden;
}
.price {
    float: left;
}
.item-info .origin-pri {
    font-size: 12px;
    color: #F54B8A;
    display: block;
}
.item-info .vip-pri {
    font-size: 14px;
    color: #F3BF1B;
    display: block;
}
.item-ari {
    float: right;
    padding: 3px;
    color: #F54B8A;
    border: 1px solid #F54B8A;
    font-size: 14px;
    width: 60px;
}
.footer {
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    display: flex;
    width: 100%;
    font-size: 14px;
    background-color: #FED468;
    height: 50px;
    line-height: 50px;
    text-align: center;
    color: #fff;
    padding-left: 10px;
    box-sizing: border-box;
}
.footer button {
    margin-top: 10px;
    font-size: 14px;
    color: #FED468;
    width: 85px;
    height: 30px;
    line-height: 30px;
}



